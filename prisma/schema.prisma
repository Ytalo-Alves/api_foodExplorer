generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  avatar    String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  order     Order[]

  @@map("users")
}

model Dish {
  id          String       @id @default(uuid())
  title       String
  description String
  category    String
  price       String
  image       String
  ingredients Ingredient[]

  @@map("dishes")
}

model Ingredient {
  id      String @id @default(uuid())
  name    String
  dish_id String @default("CASCADE")
  dish    Dish   @relation(fields: [dish_id], references: [id], onDelete: Cascade)

  @@map("ingredients")
}

model Order {
  id             String @id @default(uuid())
  user_id        String
  status         String
  total_price    String
  payment_method String
  createdAt      String
  user           User   @relation(fields: [user_id], references: [id])

  @@map("orders")
}
